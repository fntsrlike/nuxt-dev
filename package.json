{
  "name": "@fntsr/next-dev-env",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": "^18.18.2",
    "pnpm": "^8.9.0"
  },
  "scripts": {
    "build": "nuxi build",
    "dev": "nuxi dev",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "postinstall": "nuxi prepare",
    "postinstall:vscode-ext": "./scripts/install-vscode-ext.sh",
    "postinstall:git-hook": "simple-git-hooks",
    "lint": "pnpm run postinstall && pnpm run lint:ts && pnpm run lint:es",
    "lint:ts": "nuxi typecheck",
    "lint:es": "eslint .",
    "lint:es-fix": "eslint . --fix",
    "lint:staged": "eslint --fix --cache --cache-strategy content",
    "lint:sh": "cd scripts && shellcheck **.sh"
  },
  "devDependencies": {
    "@antfu/eslint-config": "1.0.0-beta.27",
    "@nuxt/content": "^2.8.5",
    "@nuxt/devtools": "latest",
    "eslint": "^8.52.0",
    "lint-staged": "^15.0.2",
    "nuxt": "^3.8.0",
    "shellcheck": "^2.2.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "vue": "^3.3.7",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.19"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "pnpm run lint:staged"
    ],
    "*.sh": [
      "pnpm run lint:sh"
    ]
  }
}
